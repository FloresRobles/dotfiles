#!/bin/bash

set -euf -o pipefail

# Initialize.
echo "â€º ~/.dotfiles"
if [[ ! -d ~/.dotfiles ]]; then
  new_dotfiles_install=1
  # ~/.dotfiles doesn't exist? Clone it!
  echo "Downloading dotfiles"
  git clone --recursive https://github.com/floresrobles/dotfiles.git ~/.dotfiles
  cd ~/.dotfiles
fi

sh ./bin/dot-install
